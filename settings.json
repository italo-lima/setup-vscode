{
  "workbench.editor.labelFormat": "short",
    // Define o tema dos ícones na sidebar
    "workbench.iconTheme": "material-icon-theme",
    "workbench.startupEditor": "newUntitledFile",
    // Configura tamanho e família da fonte
    "editor.fontSize": 14,
    "editor.lineHeight": 20,
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    },
    // Ao mudar uma pasta de lugar ou deletar, será feito de forma automática sem confirmação
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    // Evita que as subpastas fiquem em linha
    "explorer.compactFolders": false,
    // Aplica linhas verticais para lembrar de quebrar linha em códigos muito grandes
    "editor.rulers": [
      80,
      100
    ],
    // Aplica um sinal visual na esquerda da linha selecionada
    "editor.renderLineHighlight": "gutter",
    // Aumenta a fonte do terminal
    "terminal.integrated.fontSize": 14,
    "editor.tabSize": 2,
    "[javascript]": {
      "editor.tabSize": 2
    },
    "[typescript]": {
      "editor.tabSize": 2
    },
    "liveServer.settings.port": 5501,
    // "tslint.autoFixOnSave": true,
    // Ignora as recomendações de extensões do próprio editor
    "extensions.ignoreRecommendations": true,
    "emmet.syntaxProfiles": {
      "javascript": "jsx",
      "nunjucks": "html"
    },
    "emmet.includeLanguages": {
      "javascript": "javascriptreact",
      "nunjucks": "html"
    },
    // Evita que as correções de importações seja feita de forma automática
    "javascript.updateImportsOnFileMove.enabled": "never",
    "typescript.updateImportsOnFileMove.enabled": "never",
    // Auto import
    "javascript.suggest.autoImports": true,
    "typescript.suggest.autoImports": true,
    "gitlens.codeLens.recentChange.enabled": false,
    "gitlens.codeLens.authors.enabled": false,
    "gitlens.codeLens.enabled": false,
    // Mostra a árvore de arquivos no começo do arquivo
    "breadcrumbs.enabled": true,
    "git.enableSmartCommit": true,
    "editor.parameterHints.enabled": false,
    "material-icon-theme.folders.associations": {
      "infra": "app",
      "entities": "class",
      "schemas": "class",
      "typeorm": "database",
      "repositories": "mappings",
      "http": "container",
      "migrations": "tools",
      "modules": "components",
      "implementations": "core",
      "dtos": "typescript",
      "fakes": "mock",
      "contexts": "hook",
    },
    "material-icon-theme.files.associations": {
      "ormconfig.json": "database",
      "tsconfig.json": "tune",
      "routes.ts": "routing",
      "routes.js": "routing"
    },
    "[json]": {
      "editor.defaultFormatter": "vscode.json-language-features",
      "editor.tabSize": 2
    },
    "editor.minimap.enabled": false,
    "editor.formatOnType": true,
    "material-icon-theme.activeIconPack": "nest",
    "javascript.validate.enable": false,
    "liveshare.authenticationProvider": "Microsoft",
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.formatOnSave": false,
    "prettier.singleQuote": true,
    "workbench.editor.enablePreview": false,
    "[typescriptreact]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "files.autoSave": "off",
    "git.confirmSync": false,
    "workbench.statusBar.visible": true,
    "terminal.integrated.tabs.enabled": true,
    "window.titleBarStyle": "custom",
    "security.workspace.trust.untrustedFiles": "open",
    "workbench.colorTheme": "Dracula"
  }
